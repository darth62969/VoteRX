<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.recyclerFragment.RecyclerFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:background="@color/background_grey"
        >
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/recycler_view_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Candatates Running for Office"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="24sp"
            android:layout_marginBottom="20dp"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/recycler_view_title"
            tools:listitem="@layout/viewholder_candidate_item"
            />

    </RelativeLayout>

</layout>